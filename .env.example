# TBP Pipeline - Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to git!

# =============================================================================
# POLYGON.IO CREDENTIALS (REQUIRED)
# =============================================================================
# Get these from: https://polygon.io/dashboard/keys
# After creating account and subscribing to Flat Files
POLYGON_S3_ACCESS_KEY=your_s3_access_key_here
POLYGON_S3_SECRET_KEY=your_s3_secret_key_here
POLYGON_API_KEY=your_api_key_here

# =============================================================================
# DATABASE CREDENTIALS (REQUIRED)
# =============================================================================
# Your TimescaleDB connection details
DB_HOST=192.168.1.11        # Your database host
DB_PORT=5432                # Database port (default: 5432)
DB_NAME=trading_tbp         # Database name
DB_USER=postgres            # Database username
DB_PASSWORD=your_password   # Database password

# =============================================================================
# ENVIRONMENT SETTINGS (OPTIONAL)
# =============================================================================
# Environment type: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=DEBUG

# Development mode (enables extra debugging)
DEV_MODE=true

# Enable local caching
CACHE_ENABLED=true

# Number of parallel workers (1 for debugging, 3+ for production)
PARALLEL_WORKERS=1

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================
# Custom directories (uncomment and modify if needed)
# DATA_DIR=/custom/path/to/data
# CACHE_DIR=/custom/path/to/cache
# LOG_DIR=/custom/path/to/logs

# Notification settings (for future use)
# NOTIFICATION_EMAIL=your.email@example.com
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Monitoring settings (for future use)  
# ENABLE_METRICS=true
# METRICS_PORT=9090